# Xinyue-Go 配置文件模板
# 复制此文件为 config.yaml 并修改相应配置

server:
  port: 6060
  mode: release  # debug/release
  read_timeout: 60
  write_timeout: 60

database:
  host: mysql  # Docker环境使用服务名，本地开发使用 127.0.0.1
  port: 3306
  username: root
  password: root123456  # 请修改为安全密码
  database: xinyue
  prefix: qf_
  max_idle_conns: 10
  max_open_conns: 100
  ssl_mode: false

redis:
  host: redis  # Docker环境使用服务名，本地开发使用 localhost
  port: 6379
  password: ""  # 生产环境建议设置密码
  db: 0
  pool_size: 10
  min_idle_conns: 5

pansou:
  url: http://pansou:8888  # Docker环境使用服务名
  timeout: 30

cache:
  search_ttl: 60  # 搜索结果缓存时间（秒）

transfer:
  max_concurrent: 5  # 最大并发转存数
  timeout: 15  # 转存超时时间（秒）
  max_success: 2  # 最大成功转存数

jwt:
  secret: your-secret-key-change-this-in-production  # 请修改为随机字符串
  expire_hours: 168  # Token过期时间（小时）

log:
  level: info  # debug/info/warn/error
  file_path: ./logs/app.log
  max_size: 100  # MB
  max_backups: 3
  max_age: 7  # 天

rate_limit:
  enabled: true
  requests_per_second: 10
  burst: 20

app:
  name: Xinyue 网盘搜索
  debug: false